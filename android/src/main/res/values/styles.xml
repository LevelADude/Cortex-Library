<resources>

    <style name="AppTheme.Widget.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="colorPrimary">?colorPrimary</item>
        <item name="android:elevation">@dimen/app_bar_layout_elevation</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout.Colored</item>
    </style>


    <style name="AppTheme.Widget.Button" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="rippleColor">?attr/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Widget.FAB" parent="@style/Base.Widget.Material3.FloatingActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

        <item name="android:colorPrimary">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>

        <item name="fabCustomSize">@dimen/fab_size</item>
        <item name="android:minHeight">@dimen/fab_size</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="layout_anchorGravity">bottom|right|end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="borderWidth">@dimen/fab_borderWidth</item>

    </style>

    <style name="AppTheme.Widget.ExtendedFAB" parent="@style/Base.Widget.Material3.ExtendedFloatingActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

        <item name="android:colorPrimary">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>

        <item name="fabCustomSize">@dimen/fab_size</item>
        <item name="android:minHeight">@dimen/fab_size</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="layout_anchorGravity">bottom|right|end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="AppTheme.Widget.ActionBar" parent="ThemeOverlay.Material3.ActionBar">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="subtitleTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="colorControlNormal">?attr/colorOnSurface</item>
    </style>

    <style name="AppTheme.Widget.PopupMenu" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:popupBackground">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="AppTheme.Widget.ActionBar.Emerald" parent="ThemeOverlay.Material3.ActionBar">
        <item name="backgroundTint">#114B47</item>
        <item name="titleTextColor">#E6F4E8</item>
        <item name="subtitleTextColor">#CDE6D3</item>
        <item name="colorControlNormal">#E6F4E8</item>
    </style>

    <style name="AppTheme.Widget.ActionBar.Midnight" parent="ThemeOverlay.Material3.ActionBar">
        <item name="backgroundTint">#0F172A</item>
        <item name="titleTextColor">#F5EFE6</item>
        <item name="subtitleTextColor">#E0D8C6</item>
        <item name="colorControlNormal">#F5EFE6</item>
    </style>

    <style name="AppTheme.Widget.BottomNavigation.Emerald" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">#114B47</item>
        <item name="itemIconTint">@color/bottom_nav_emerald_colors</item>
        <item name="itemTextColor">@color/bottom_nav_emerald_colors</item>
    </style>

    <style name="AppTheme.Widget.BottomNavigation.Midnight" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">#0F172A</item>
        <item name="itemIconTint">@color/bottom_nav_midnight_colors</item>
        <item name="itemTextColor">@color/bottom_nav_midnight_colors</item>
    </style>

</resources>
